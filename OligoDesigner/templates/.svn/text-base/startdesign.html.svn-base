{% extends "base.html" %} 
{% block content %}
 <title>从这里开始设计</title>
 
<style>
div{table-layout:fixed;}
div{word-break:break-all;word-wrap:break-word;overflow:hidden;text-align:left;}
textarea{overflow-y:visible;}
h5{font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;}
</style>
<div class="container">
<form action="http://{{local}}/NonNshFilter/" method="POST" role="form">{% csrf_token %}
<div class="list-group">
 <a href="#" class="list-group-item active">
 <h5 class="list-group-item-heading">
 待设计序列描述
 </h5></a>
<div class="well well-sm">
{{description}}
</div></div>
<div class="list-group">
 <a href="#" class="list-group-item active">
 <h5 class="list-group-item-heading">
  待设计序列全部基因序列
 </h5></a>
<div class="well well-lg">
<textarea name="seqtxt" class="form-control" style="overflow-y:hidden;height:80px;" onpropertychange="this.style.height=this.scrollHeight+'px';" oninput="this.style.height=this.scrollHeight+'px';">{{sequence}}</textarea>
</div></div>
<button type="submit" class="btn btn-primary" style="text-shadow: black 5px 3px 3px;"><span class="glyphicon glyphicon glyphicon-step-forward"></span>开始设计</button>
</form>
</div>
<!-- /#mainWrap -->
{% endblock %}